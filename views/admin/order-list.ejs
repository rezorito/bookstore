                                <option value="TN">Sách thiếu nhi</option>
                                <option value="VH">Sách văn học</option>
                                <option value="TT">Trinh thám</option>
                                <option value="CK">Sách có chữ ký</option>
                                <option value="CPP">Văn phòng phẩm</option>
                            </select>
                        </div>
                        <div class="product-info-detail">
                            <p class="user-info-label">Ảnh sản phẩm</p>
                            <div class="product-picture">
                                <img src="" alt="" class="imgsp" id="img_Book_add" />
                            </div>
                            <input type="file" id="fileInput_add" style="display: none" accept="image/*" />
                            <a class="changeImg_add" href="">Thay đổi</a>
                        </div>
                    </div>
                    <div class="product-info">
                        <div class="product-info-detail">
                            <p class="user-info-label">Khuyến mại (%)</p>
                            <input class="user-name-textInput" type="text" id="sale_Book_add" />
                        </div>
                        <div class="product-info-detail">
                            <p class="user-info-label">Giá gốc (000đ)</p>
                            <input class="user-name-textInput" type="text" id="price_Book_add" />
                        </div>
                        <div class="product-info-detail">
                            <p class="user-info-label">Mô tả</p>
                            <textarea name="mota" cols="60" rows="13" id="moTa_Book_add"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                <a class="btn btn-primary" href="" id="btn_Accept_add">Thêm</a>
            </div>
        </div>
    </div>
</div>

