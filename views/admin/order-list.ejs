                        <div class="product-info-detail">
                            <p class="user-info-label">ID</p>
                            <input class="user-name-textInput" type="text" id="id_Book_add" />
                        </div>
                        <div class="product-info-detail">
                            <p class="user-info-label">Tên sản phẩm</p>
                            <input class="user-name-textInput" type="text" id="name_Book_add" />
                        </div>
