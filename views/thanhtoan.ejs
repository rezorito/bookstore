<script src="/js/main.js" defer></script>

<div class="app__container1">
    <div class="content2">
        <div class="coll">
            <div class="pay-info">
                <div class="pay-info__main">
                    <div class="info">
                        <h2>Thông tin thanh toán</h2>
                        <div class="cus_info">
                            <div class="row">
                                <label for="">Họ và tên</label>
                                <div>
                                    <input type="text" placeholder="Họ và tên" id="nameUser"/>
                                </div>
                            </div>
                            <div class="row">
                                <label for="">Email</label>
                                <div>
                                    <input type="text" placeholder="email" id="emailUser"/>
                                </div>
                            </div>
                            <div class="row">
                                <label for="">Số điện thoại</label>
                                <div>
                                    <input type="text" placeholder="Điện thoại" id="sdtUser"/>
                                </div>
                            </div>
                            <div class="row">
                                <label for="">Địa chỉ</label>
                                <div>
                                    <input type="text" placeholder="Địa chỉ" id="addressUser"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="shipping">
                        <h2 style="font-weight: 500">Phương thức vận chuyển</h2>
                        <div class="shipping1">
                            <input name="ship" type="radio" value="Giao hàng nhanh" id="ghn" checked />Giao
                            hàng nhanh
                            <div class="price">
                                <p><span>35</span>.000<sup>đ</sup></p>
                            </div>
                        </div>
                        <div class="shipping1">
                            <input name="ship" type="radio" value="Giao hàng nhanh" id="ghht" />Giao hàng
                            hỏa tốc
                            <div class="price">
                                <p><span>50</span>.000<sup>đ</sup></p>
                            </div>
                        </div>
                    </div>
                    <div class="ptthanh_toan">
                        <h2 style="font-weight: 500">Phương thức thanh toán</h2>
                        <div class="ptthanh_toan1">
                            <input name="pay" type="radio" value="Thanh toán khi nhận hàng" id="pay_cod" checked />Thanh
                            toán khi
                            nhận hàng (COD)
                        </div>
                        <div class="ptthanh_toan1">
                            <input name="pay" type="radio" value="Chuyển khoản qua ngân hàng" id="pay_bank" />Chuyển
                            khoản qua ngân
                            hàng
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="coll">
            <div class="cart-info">
                <div class="cart-info__main" id="TTSPPay">

                </div>
                <div class="cart-info__main">
                    <div class="discountcode">
                        <input type="text" placeholder="Mã giảm giá" />
                        <button>Áp dụng</button>
                    </div>
                    <div class="price1">
                        <div class="price2">
                            <label>Tạm tính</label>
                            <p><span id="price-sp">160</span>.000<sup>đ</sup></p>
                        </div>
                        <div class="price2">
                            <label>Phí ship</label>
                            <p><span id="price-ship">35</span>.000<sup>đ</sup></p>
                        </div>
                    </div>
                    <div class="total-price">
                        <h3>Tổng tiền</h3>
                        <p><span id="price-total">2</span>.000<sup>đ</sup></p>
                    </div>
                </div>
            </div>
            <div class="pay-info__footer">
                <a class="returnpage" href="/">Quay lại mua sắm</a>
                <a class="butn butn__tt" id="open-popupqr-btn">Thanh toán</a>
            </div>
        </div>
    </div>
</div>
<div id="popupqr" class="popupqr">
    <div class="popupqr-content">
        <span class="close-btn" id="close-popupqr-btn"">&times;</span>
  <div class=" popup-body">
            <img class="qrcodeimg"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTE48jfGX5hfbOZ3jMkof42sxcMiTCSX_xr-Q&s" />
            <div class="bank-info">
                <img src="https://news.khangz.com/wp-content/uploads/2023/04/CACH-LAM-THE-NGAN-HANG-MB-BANK-ONLINE-1.jpg"
                    alt="Bank Logo" class="bank-logo" />
                <p>221003160903</p>
                <p>PHAM NGOC NGHIA</p>
                <p>Tổng tiền : <span id="TotalPayment"></span>.000đ</p>
                <p>Trong nội dung (bắt buộc *) : <span id="codext"></span></p>
            </div>
    </div>
</div>
</div>
<div class="body-overlay" id="body-overlay"></div>

